extends layout

block content
  include partials/header
  if index !== 'error'  
    .container
      .row
        .col
          p.mt-5
            a(href="/openworkshops") &#8592; Список мастерских
          h2.title= data.workshops[index].name
          p= data.workshops[index].description    

    .container
      each image, img_index in data.workshops[index].images
        //- если порядковый номер элемента больше ноля, то вывести картинку (пропускаем первый элемент)
        - if (img_index > 0)
          .row
            .col.text-center.text-padding-top
              =img_index
              img.img-fluid(src=data.workshops[index].images[img_index], alt=data.workshops[index].title)

  else
    .container
      .row
        .col
          p.mt-5
          a(href="/openworkshops") &#8592; Список мастерских
          h2.title Такого тут нет

  include partials/footer