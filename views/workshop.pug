extends layout

block content
  include partials/header
  if index !== 'error'  
    .container
      .row
        .col
          p.mt-5
            a(href="/openworkshops") &#8592; Список мастерских
          h2.title= data.workshops[index].name
          p= data.workshops[index].description    

    <div class="container">
      each image, img_index in data.workshops[index].images 
        <div class="row">
          <div class="col text-center text-padding-top">
              img.img-fluid(src=data.workshops[index].images[img_index+1], alt=data.workshops[index].title )
          </div>
        </div>
    </div>

  else
    .container
      .row
        .col
          p.mt-5
          a(href="/openworkshops") &#8592; Список мастерских
          h2.title Такого тут нет

  include partials/footer